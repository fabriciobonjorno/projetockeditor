<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Tag</th>
      <th scope="col">Body</th>
    </tr>
  </thead>
<% @articles.each do |article| %>
  <tbody>
    <tr>
      <th scope="row"><%= article.id %></th>
      <td><%= article.title %></td>
      <td><%= article.tags.map{|at| at.tag.description}.join(",") %></td>
      <td><%= article.body %></td>
    </tr>
  </tbody>
  <% end %>
</table>

